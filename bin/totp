#!/usr/bin/env node
var hotp = require( '..' )
var argv = process.argv.slice( 2 )

var key = argv.shift()
var digits = argv.shift()

if( !key ) {
  console.error( `Usage: hotp <key> [digits=6]` )
  process.exit( 1 )
}

var options = {
  digits: digits ? +digits : undefined,
}

console.log( hotp.totp( key, options ) )
