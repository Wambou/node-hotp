#!/usr/bin/env node
var hotp = require( '..' )
var argv = process.argv.slice( 2 )

var key = argv.shift()
var counter = argv.shift()
var digits = argv.shift()

if( !key || !counter ) {
  console.error( `Usage: hotp <key> <counter> [digits=6]` )
  process.exit( 1 )
}

console.log( hotp( key, counter, digits ? +digits : undefined ) )
